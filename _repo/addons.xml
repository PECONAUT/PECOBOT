<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.freshstart" name="Fresh Start"
	version="1.0.5" provider-name="tvaddons.ag">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Factory Restore Functionality for Kodi</summary>
    <description lang="en">Easily Factory Restore your Kodi Configuration in One Simple Click! This tool will bring your Kodi back to its original installation state, deleting all customizations and add-ons you may have previously enabled, giving you a fresh start!</description>
    <platform>all</platform>
    <forum>http://forums.tvaddons.ag/forums/141-FRESH-START</forum>
    <website>http://www.tvaddons.ag/</website>
  </extension>
</addon>

    <addon id="repository.pecobot" name="PECOBOT REPOSITORY" version="0.1.0" provider-name="pecobot">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="PECOBOT REPOSITORY">
            <info compressed="false">https://raw.githubusercontent.com/PECONAUT/pecobot/master/_repo/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/PECONAUT/pecobot/master/_repo/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/PECONAUT/pecobot/master/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>Made for the community</summary>
            <description>Updated weekly for the community. Bringing the best of Kodi to a single repo</description>
            <platform>all</platform>
    </extension>
</addon>
</addons>
